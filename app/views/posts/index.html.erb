<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Posts</h1>
    <%= link_to 'Back to Top', root_path, 
        class: "text-gray-600 hover:text-gray-900" %>
  </div>

  <table class="min-w-full bg-white border border-gray-300">
    <thead>
      <tr class="bg-gray-100">
        <th class="px-6 py-3 border-b text-left">Title</th>
        <th class="px-6 py-3 border-b text-left">Content</th>
        <th class="px-6 py-3 border-b text-left">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 border-b"><%= post.title %></td>
          <td class="px-6 py-4 border-b"><%= post.content %></td>
          <td class="px-6 py-4 border-b space-x-2">
            <%= link_to 'Show', post, class: "text-blue-600 hover:text-blue-800" %>
            <%= link_to 'Edit', edit_post_path(post), class: "text-green-600 hover:text-green-800" %>
            <%= link_to 'Destroy', post_path(post),
                data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                class: "text-red-600 hover:text-red-800" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Post', new_post_path, 
      class: "inline-block mt-4 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
</div>